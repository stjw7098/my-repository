<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="230dp"
    android:id="@+id/rlRoot"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/iv_one_money"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="3dp"
        android:src="@mipmap/onemoney" />

    <TextView
        android:id="@+id/tvCommodity"
        android:paddingLeft="10dp"
        android:layout_width="160dp"
        android:layout_height="20dp"
        android:layout_below="@id/ivImage"

        android:layout_marginTop="2dp"
        android:text="商品信息" />

    <View
        android:id="@+id/view1"
        android:layout_width="170dp"
        android:layout_height="1dp"
        android:layout_below="@id/tvCommodity"
        android:background="@color/gray"
        android:layout_margin="5dp"/>


    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvWinner1"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="获  奖  者:"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvWinner2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/tvWinner1"
            android:text="Winner"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPersons1"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvWinner1"
            android:layout_marginTop="3dp"
            android:text="参与人数:"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvPerson2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvWinner2"
            android:layout_marginTop="3dp"
            android:text="Numbers"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvIndiana1"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="夺  宝  号:"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvIndiana2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvWinner2"
            android:layout_marginTop="3dp"
            android:textColor="@color/red"
            android:text="Indiana"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTime1"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNumbers"
            android:layout_marginTop="3dp"
            android:text="揭晓时间:"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvTime2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvWinner2"
            android:layout_marginTop="3dp"
            android:text="Time"
            android:textSize="12sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_below="@id/ll4"
        android:background="@color/gray"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@color/gray"
        />



</RelativeLayout>