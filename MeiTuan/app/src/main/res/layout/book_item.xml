<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="7dp"

    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/llRoot"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp"
        android:clickable="true"
        android:background="@drawable/book_item_bg">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/tv_book_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="订单编号:"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_book_num2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_book_num"
                android:layout_marginTop="5dp"
                android:text="订单编号:"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_book_time"
                android:gravity="center"
                android:layout_below="@id/tv_book_num"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:text="订单时间:"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/tv_book_time2"
                android:gravity="center_vertical"
                android:layout_below="@id/tv_book_num"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_book_time"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:text="订单时间:"
                android:layout_width="190dp"
                android:layout_height="30dp" />


            <TextView
                android:id="@+id/tv_book_count"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_below="@id/tv_book_time"
                android:layout_marginTop="3dp"
                android:textColor="@color/black"

                android:text="商品种数:"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_book_count2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tv_book_count"
                android:layout_below="@id/tv_book_time"
                android:layout_marginTop="3dp"
                android:textColor="@color/black"

                android:text="3"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_book_price"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_below="@id/tv_book_time"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="40dp"
                android:layout_toRightOf="@id/tv_book_count"
                android:text="价格:"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_book_price2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"

                android:layout_below="@id/tv_book_time"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_book_price"
                android:text="199"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/sdv2"
            android:layout_marginTop="10dp"
            android:layout_marginRight="2dp"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:src="@mipmap/shopcar"

             />

    </LinearLayout>
</android.support.v7.widget.CardView>
