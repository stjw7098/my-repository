<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/pink"
        android:gravity="center_vertical"
        >


        <RadioGroup
            android:id="@+id/rg"
            android:layout_marginLeft="110dp"
            android:background="@drawable/second_fragment_shape"
            android:layout_height="37dp"
            android:layout_width="180dp"
            android:padding="2dp"
            android:orientation="horizontal"
            >

            <RadioButton
                android:id="@+id/rbIndiana"
                android:background="@drawable/second_fragment_selector"

                android:layout_width="90dp"
                android:layout_height="35dp"

                android:text="夺宝"
                android:checked="true"
                android:textColor="@color/red"
                android:button="@null"
                style="@style/indiana"
                android:gravity="center" />

            <RadioButton
                android:id="@+id/rbAnnounced"
                android:background="@drawable/second_fragment_selector"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:text="揭晓"
                android:button="@null"
                style="@style/indiana"
                android:gravity="center"
                />


        </RadioGroup>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tvIndianaRule"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/question"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            />

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/gray_tran_i"
        />
</LinearLayout>