<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qf.meituan.HomeVpContentActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/pink"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/tv_vp_content_back"
            android:layout_width="21dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/back_white"/>
        <TextView
            android:id="@+id/tv_vp_content_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_centerInParent="true"
            android:text="Title"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/tv_vp_content_refresh"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@mipmap/goods_refresh"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>
    <ProgressBar
        android:id="@+id/pb_vp_content_progress"
        style="@style/MyHorizontalProgressBar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:progress="30"/>
    <WebView
        android:id="@+id/wv_vp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
