<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_bg"
    android:background="@drawable/user_sign_bg"
    tools:context="com.qf.news.LoginActivity">
    <ImageView
        android:id="@+id/iv_bg"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/iv_head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@mipmap/my_head"/>
    <TextView
        android:id="@+id/tv_login"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户注册"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:layout_below="@+id/iv_head"/>

    <LinearLayout
        android:id="@+id/llUser"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="270dp"
        android:gravity="center"
        android:layout_height="45dp"
        android:layout_below="@+id/tv_login"
        android:background="@drawable/shape_user_pwd"
        >
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/user3"/>
        <EditText
            android:id="@+id/etUser"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:background="#0000"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:hint="用户名"
            android:paddingLeft="20dp"
            android:textColorHint="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llPwd"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="270dp"
        android:gravity="center"
        android:layout_height="45dp"
        android:layout_below="@+id/llUser"
        android:background="@drawable/shape_user_pwd"
        >
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/lock2"/>

        <EditText
            android:id="@+id/etPwd"
            android:layout_width="200dp"
            android:inputType="textPassword"
            android:layout_height="45dp"
            android:background="#0000"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:hint="密码"
            android:paddingLeft="17dp"
            android:textColorHint="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llPwd2"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="270dp"
        android:gravity="center"
        android:layout_height="45dp"
        android:layout_below="@+id/llPwd"
        android:background="@drawable/shape_user_pwd"
        >
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/lock2"/>

        <EditText
            android:id="@+id/etPwd2"
            android:layout_width="200dp"
            android:inputType="textPassword"
            android:layout_height="45dp"
            android:background="#0000"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:hint="确认密码"
            android:paddingLeft="17dp"
            android:textColorHint="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvSign"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_login"
        android:layout_below="@+id/llPwd2"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:gravity="center"
        android:text="注册"
        android:textColorHint="@color/white" />





</RelativeLayout>
